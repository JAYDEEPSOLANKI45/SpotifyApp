    text-align: center;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    color: #fff;
}
.card h2 {
    font-size: 1.5rem;
    margin-bottom: 10px;
}
.card img {
    width: 100%;
    border-radius: 10px;
    margin-bottom: 10px;
}
.album-playlist-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
}
.track-card {
    display: flex;
    align-items: center;
    background: #333;
    padding: 10px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
